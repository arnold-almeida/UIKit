{
    "name"        : "almeida/ui-kit",
    "description" : "A frontend generator that encourages the maintenance of a pattern libary.",
    "type"        : "library",
    "homepage"    : "https://github.com/arnold-almeida/UIKit",
    "keywords"    : ["ui-kit", "frontend", "generators"],
    "license"     : "MIT",
    "authors": [
        {
            "name": "Arnold Almeida",
            "email": "arnold@floatingpoints.com.au",
            "homepage" : "http://floatingpoints.com.au",
            "role"     : "Developer"
        }
    ],
    "require-dev": {
        "phpspec/phpspec": "2.0.*@dev"
    },
    "require": {
        "php": ">=5.4.0",
        "league/di": ">=1.1",
        "illuminate/html": "4.2.*",
        "illuminate/routing": "4.2.*"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "Almeida\\UIKit": ["src/", "spec/"]
        }
    },
    "minimum-stability": "dev",
    "suggest": {
        "almeida/ui-kit-laravel": "Laravel implemention of almeida/ui-kit"
    }

}
